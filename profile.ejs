<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>
    <div id="algn">
        <div id="card">
            <div id="upper-bg">
                <img src="https://plus.unsplash.com/premium_photo-1668013654850-a0bc523d7bca?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTN8fGRlZXJ8ZW58MHx8MHx8fDA%3D" alt="profile-pic" class="profile-pic">
            </div>
            <div id="lower-bg">
              <div class="text">
                <p class="name"><%= user.username %></p>
                <p class="title">Web developer & <br> Competitive programmer</p>
              </div>
              <div id="btn">
                <a href="/feed"><button class="feed-btn">Explore more</button></a> <!-- Added Feed Button -->
                <a href="/logout"><button class="msg">Logout</button></a>
                <form class="upload-form" action="/upload" method="post" enctype="multipart/form-data">
                  <input class="input-field" type="text" name="filecaption" placeholder="some caption">
                  <input class="input-file" type="file" name="file">
                  <button class="upload-button" type="submit">Upload</button>
                </form>
              </div>
            </div>
        </div>
    </div>
   <div class="div1"> 
    <div class="cardss">
      <% user.posts.forEach(function(post){ %>
        <div class="card2">
          <img class="img1" src="/images/uploads/<%= post.image %>" class="card-img-top" alt="Card image">
          <div class="card-body">
            <h5 class="card-title"><%= post.imageText%></h5>
          </div>
        </div>
     <% }) %>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
